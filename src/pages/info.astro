---
import Markdown from "@components/misc/Markdown.astro";
import { getEntry, render } from "astro:content";
import MainGridLayout from "@/layouts/MainGridLayout.astro";
import PageEncryptor from "../components/PageEncryptor.astro";

const infoPost = await getEntry("spec", "info");

if (!infoPost) {
	throw new Error("info page content not found");
}

const { Content } = await render(infoPost);

let isEncrypted = infoPost.data.encrypted && infoPost.data.password;
---
<MainGridLayout title="信息" description="信息">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
			{isEncrypted ? (
				<PageEncryptor password={infoPost.data.password}>
					<Markdown class="mt-2">
						<Content />
					</Markdown>
				</PageEncryptor>
			) : (
				<Markdown class="mt-2">
					<Content />
				</Markdown>
			)}
        </div>
    </div>
</MainGridLayout>
